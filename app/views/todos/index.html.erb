<div class="todos">
  <p id="notice"><%= notice %></p>

  <h1>Todos</h1>
  <%=form_for Todo.new,:url => todos_path do |form| %>
            <%= form.text_field :title %>
            <%= form.submit "Create" %>
  <% end %>
  <br><br>
  <% @todos.each do |todo| %>
    <div class="items">
      <%= form_for todo , method: :patch, url: todo_path(todo) do |f| %>
        <%= f.check_box :completed %>
      <% end %>
      <%= todo.title %>
      <%= link_to 'Edit', edit_todo_path(todo) %>
      <%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
</div>
